{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES5",
    "jsx": "react",
    "noImplicitAny": true,
    "allowJs": true,
    "strict": true,
    "sourceMap": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "moduleResolution": "node",
    "outDir": "./dist/",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
